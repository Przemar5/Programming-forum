{% extends 'base.html.twig' %}

{% block title %}Tag "{{ tag.name }}"{% endblock %}

{% block body %}
    <div class="container bg-blue-light p-3 shadow">
        <div class="d-flex flex-column flex-sm-row justify-content-between mb-2">
            <h2>Tag "{{ tag.name }}"</h2>

            {% if is_granted('ROLE_ADMIN') %}
                <div class="d-flex flex-row align-items-center">
                    <a href="{{ path('tag_edit', {'id': tag.id}) }}" class="btn btn-primary mr-3">edit</a>
                    
                    {{ include('tag/_delete_form.html.twig') }}
                </div>
            {% endif %}
        </div>

        <table class="table text-dark">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ tag.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ tag.name }}</td>
                </tr>
                <tr>
                    <th>Posts</th>
                    <td>{{ tag.topicsCount }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('tag_index') }}">&larr; Go to list</a>
    </div>
{% endblock %}
