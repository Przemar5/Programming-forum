<form method="post" action="{{ path('post_remove', {'id': post.id}) }}" onsubmit="return confirm('Are you sure you want to permamently remove this post?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('remove' ~ post.id) }}">
    <button class="btn btn-sm btn-danger">Remove</button>
</form>
