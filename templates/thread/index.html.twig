{% extends 'base.html.twig' %}

{% block title %}Thread index{% endblock %}

{% block body %}
    <h1>Thread index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for thread in threads %}
            <tr>
                <td>{{ thread.id }}</td>
                <td>{{ thread.name }}</td>
                <td>{{ thread.createdAt ? thread.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ thread.updatedAt ? thread.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('thread_show', {'id': thread.id}) }}">show</a>
                    <a href="{{ path('thread_edit', {'id': thread.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('thread_create') }}">Create new</a>
{% endblock %}
